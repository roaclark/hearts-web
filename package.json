{
  "name": "hearts",
  "scripts": {
    "build": "./node_modules/.bin/webpack",
    "start": "node app.js",
    "postinstall": "./node_modules/.bin/webpack",
    "start:client": "webpack-dev-server",
    "start:server": "node app.js",
    "db:init": "cd db && db-migrate db:create hearts --env=dev-init",
    "db:drop": "cd db && db-migrate db:drop hearts --env=dev-init",
    "db:up": "cd db && db-migrate up",
    "db:reset": "cd db && db-migrate reset",
    "db:up:production": "DATABASE_URL=$(heroku config:get DATABASE_URL -a rosalia-hearts)?ssl=true ./node_modules/db-migrate/bin/db-migrate up -m ./db/migrations"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "db-migrate": "^0.10.0-beta.24",
    "db-migrate-pg": "^0.2.5",
    "eslint": "4.10.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "html-webpack-plugin": "^2.30.1",
    "prettier": "1.7.4",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.2"
  },
  "dependencies": {
